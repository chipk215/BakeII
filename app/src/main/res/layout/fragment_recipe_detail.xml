<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/ingredient_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ingredients"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ingredients_recycler_view"
        android:layout_below="@id/ingredient_label_tv"
        android:layout_marginBottom="@dimen/activity_margin"/>

    <TextView
        android:id="@+id/ingredient_steps_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ingredients_recycler_view"
        android:text="@string/recipe_steps"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/steps_recycler_view"
        android:layout_below="@id/ingredient_steps_tv"/>




</RelativeLayout>





